<% if oncall_assignments.empty? %>
<div style='background-color:red;padding:10px'>
   Empty
</div>
<% else %>

<table>
  <thead>
  <tr>
    <th>Starts At</th>
    <th>Ends At</th>
    <th>Username</th>
    <th>Phone number</th>
    <th>Email Address</th>
    <th>Retry</th>
    <th></th>
  </tr>
  </thead>

<tbody>
<% oncall_assignments.each do |oncall_assignment| %>
  <tr>
    <td><%= l(oncall_assignment.starts_at, :format => :short_with_tz) if oncall_assignment.starts_at %></td>
    <td><%= l(oncall_assignment.ends_at, :format => :short_with_tz) if oncall_assignment.ends_at %></td>
    <td><%= oncall_assignment.user.username %></td>
    <td><%= oncall_assignment.user.phone_number %></td>
    <td><%= oncall_assignment.user.email %></td>
    <td><%= oncall_assignment.retry %></td>
    <td><%= link_to 'Remove', call_list_oncall_assignment_path(oncall_assignment.call_list.id, oncall_assignment.id), :remote => true, :method => 'delete', :confirm => "Are you sure?" %></td>
  </tr>
<% end %>
</tbody>
</table>

<% end %>
