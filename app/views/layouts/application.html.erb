<!DOCTYPE html>
<html>
<head>
  <title>Ringring</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container_16">
    <div class="grid_16">
      <h1 id="branding"><a href="">RingRing</a></h1>
    </div>
    <div class="clear"></div>
    <div class="grid_16">
      <ul class="nav main">
        <li><%= link_to 'Users Management', users_path %></li>
        <li><%= link_to 'Call Lists', call_lists_path %></li>
        <li class="secondary">
        <% if user_signed_in? %>
          <%= link_to "Logged in as #{current_user.username || current_user.email}", current_user %>
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
        <% else %>
          <%= link_to('Login', new_user_session_path)  %>
        <% end %>
        </li>
      </ul>
    </div>
    <div class="clear"></div>
    <div class="grid_16" style="padding:0;">
<%= yield %>
    </div>
    <div class="clear"></div>
  </div>
</body>
</html>
