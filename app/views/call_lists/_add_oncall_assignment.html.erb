<%= form_for([@call_list, OncallAssignment.new], :remote => true) do |f| %>
  <% user_array = User.order('username').collect {|s| ["#{s.username} | #{s.first_name} #{s.last_name}", s.id]} %>
  User: <%=  f.select 'user_id', options_for_select(user_array) %>
  From: <%= f.text_field 'starts_at', :class => 'timefield' %>
  To: <%= f.text_field 'ends_at', :class => 'timefield' %>
  Retry: <%= f.text_field 'retry', :class => 'tinytextfield' %>
  <%= submit_tag "Add" %>
  | <%= link_to_function 'Done', "$('#add_oncall_assignment').hide(); $('#add_oncall_assignment_link').show()" %>
<% end %>
