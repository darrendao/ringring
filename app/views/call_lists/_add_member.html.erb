<%= form_for([@call_list, CallListMembership.new], :remote => true) do |f| %>
  <% user_array = User.order('username').collect {|s| ["#{s.username} | #{s.first_name} #{s.last_name}", s.id]} %>
  User: <%=  f.select 'user_id', options_for_select(user_array) %>
  <%= f.check_box 'oncall_candidate' %> Oncall candidate?
  <%= submit_tag "Add" %>
  | <%= link_to_function 'Done', "$('#add_member').hide(); $('#add_member_link').show()" %>
<% end %>
