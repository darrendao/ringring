<Response>
    <% if @try > 2 %>
    <Say>Trying again</Say>
    <% end %>
    <Say>Calling <%= @call_escalation.user.name_to_greet %></Say>
    <Dial action="<%= @base_url %>/twilio_call_escalations/attempt_call.xml?number_index=<%= @number_index %>&amp;try=<%= @try %>&amp;call_list_id=<%= @call_list.id%>" callerId="<%= AppConfig.caller_id %>">
        <Number url="<%= @base_url %>/twilio_call_escalations/screen_for_machine.xml">
        <%= @call_escalations[@number_index].user.phone_number %>
        </Number>
    </Dial>
</Response>
